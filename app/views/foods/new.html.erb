<div id="container">
<div class="form"
<h3>ADD NEW FOOD</h3>

<br>
<br>

<%= form_with model: @food, url:foods_path do |form| %>
  <div class="form-cont">
    <div class="form-field">
    <%= form.label :name, :class => 'form-name' %> 
    <%= form.text_field :name, :class=>'form-text-field' %>
    <br>
  
    <div class="form-field">
    <%= form.label :measurement_unit, :class => 'form-name' %> 
    <%= form.text_field :measurement_unit, :class=>'form-text-field' %>

    <div class="form-field">
    <%= form.label :price_usd, :class => 'form-name' %> 
    <%= form.text_field :price, :class=>'form-text-field' %>

    <div class="form-field">
    <%= form.label :quantity, :class => 'form-name' %> 
    <%= form.text_field :quantity, :class=>'form-text-field' %>

<br>
    <%= form.submit "Add food" %>
  </div>
<% end %>
</div>
</div>