<h1 class="slist">Shopping List</h1>
<div class="sl_pinfo">
<p style="text-align:center;">Total value of food needed =  <%= @food_needed %></p>
<p style="text-align:center;">Amount of food to buy = $<%= @total_price %> </p>
</div>
<table id="sl-foods">
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
  <% @missing_ingredients.each do |ingredient| %>
<tr>
  <td><%= ingredient[:name] %></td>
  <td><%= ingredient[:quantity] %> <%=ingredient[:unit]%></td>
  <td>$ <%= ingredient[:price] %></td>
</tr>
  <% end %>
</tbody>

</table>
 